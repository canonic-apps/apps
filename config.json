{
  "inherits": "/CANONIC/LANGUAGE/TEMPLATES/CONFIG",
  "org": "canonic-apps",
  "tier": 63,
  "type": "apps",
  "templates": ["FRONTEND", "BACKEND", "CONFIG"],
  "scopes": {
    "frontend": "*.github.io",
    "backend": ".github"
  },
  "workspace": {
    "root": "~/.canonic",
    "directories": ["CONFIG", "CREDENTIALS", "HOOKS", "TRANSCRIPTS", "VALIDATORS"]
  },
  "hooks": {
    "pre-commit": "WRITING gate (validates CLOSURE)",
    "post-commit": "TRANSCRIPT sync"
  },
  "ledger": {
    "autocommit": true,
    "badge": "NOTICE",
    "message": "VaaS [{tier}] {status}",
    "stage": ["NOTICE", "config.json"],
    "triggers": {
      "pre-commit": false,
      "post-validation": true,
      "ci": true
    }
  },
  "validators": {
    "required": ["canonic_validate.py"]
  }
}
